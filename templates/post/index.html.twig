{% extends 'base.html.twig' %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .time-wrapper { font-size:10px; }
</style>
<div class="example-wrapper">
<h1>the Useless Blog</h1>
</div>

<div class="example-wrapper">

{% for key,item in posts %}
    <b>{{ item.username }}</b> - {{item.time}} - <a href="{{ path('deletepost', {id : item.id}) }}" onclick="return confirm('Are you sure?');">Delete</a> -
    <a href="{{ path('updatepost', {id : item.id}) }}">Update</a>
    <br>
    {{ item.message}} <br>
    <hr>
{% endfor %}
<br>
<br>
<br>
<a href="{{ path('addpost') }}">Join the conversation! ---></a>

</div>
{% endblock %}
